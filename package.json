{
  "name": "@colibri/identity-widget",
  "private": false,
  "version": "2.3.0",
  "description": "Embedded authentication widget for Colibri Identity platform",
  "type": "module",
  "main": "./dist/keycloak-widget.umd.js",
  "module": "./dist/keycloak-widget.es.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/keycloak-widget.es.js",
      "require": "./dist/keycloak-widget.umd.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "authentication",
    "identity",
    "login",
    "widget",
    "web-component",
    "react",
    "colibri"
  ],
  "author": "Colibri",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/McKissockLP/Colibri.Identity.Widget"
  },
  "scripts": {
    "dev": "vite",
    "prebuild": "npm run test:run",
    "build": "vite build",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "build:dev": "npm run test:run && vite build",
    "build:test": "npm run test:run && vite build",
    "build:stage": "npm run test:run && vite build",
    "build:prod": "npm run test:run && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "prepublishOnly": "npm run test:run && npm run build"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "axios": "^1.13.2",
    "jwt-decode": "^4.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.10.1",
    "react-router-dom": "^7.10.1",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/ui": "^4.0.18",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "happy-dom": "^20.5.3",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.5.0",
    "vite": "^7.2.4",
    "vitest": "^4.0.18"
  }
}
