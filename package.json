{
  "name": "@colibri/identity-widget",
  "private": false,
  "version": "1.0.5",
  "description": "Embedded authentication widget for Colibri Identity platform",
  "type": "module",
  "main": "./dist/keycloak-widget.umd.js",
  "module": "./dist/keycloak-widget.es.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/keycloak-widget.es.js",
      "require": "./dist/keycloak-widget.umd.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "authentication",
    "identity",
    "login",
    "widget",
    "web-component",
    "react",
    "colibri"
  ],
  "author": "Colibri",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/McKissockLP/Colibri.Identity.Widget"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "build:dev": "vite build",
    "build:test": "vite build",
    "build:stage": "vite build",
    "build:prod": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "axios": "^1.13.2",
    "jwt-decode": "^4.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.10.1",
    "react-router-dom": "^7.10.1",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "^5.5.0",
    "vite": "^7.2.4"
  }
}
